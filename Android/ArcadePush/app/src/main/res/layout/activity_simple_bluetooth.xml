<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">


    <RelativeLayout
        android:id="@+id/RelativeLayout03"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transmit"
            android:id="@+id/buttonTransmit"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disconnect"
            android:id="@+id/buttonDisconnect"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Receive"
            android:id="@+id/buttonReceive"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thumb"
        android:textSize="30dp"
        android:id="@+id/textViewThumb"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/barThumb"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/textViewThumb"
        android:layout_toStartOf="@+id/textViewThumb" />



    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/barIndex"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textViewIndex"
        android:layout_toStartOf="@+id/textViewThumb"
        android:layout_alignBottom="@+id/textViewIndex" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Index"
        android:textSize="30dp"
        android:id="@+id/textViewIndex"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textViewThumb"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"
        android:layout_toEndOf="@+id/barIndex" />



    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/barMiddle"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textViewMiddle"
        android:layout_toStartOf="@+id/textViewThumb"
        android:layout_alignBottom="@+id/textViewMiddle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Middle"
        android:textSize="30dp"
        android:id="@+id/textViewMiddle"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textViewIndex"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"
        android:layout_toEndOf="@+id/barMiddle" />



    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/barRing"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textViewRing"
        android:layout_toStartOf="@+id/textViewThumb"
        android:layout_alignBottom="@+id/textViewRing" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ring"
        android:textSize="30dp"
        android:id="@+id/textViewRing"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textViewMiddle"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"
        android:layout_toEndOf="@+id/barRing" />



    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/barPinky"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textViewPinky"
        android:layout_toStartOf="@+id/textViewThumb"
        android:layout_alignBottom="@+id/textViewPinky" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pinky"
        android:textSize="30dp"
        android:id="@+id/textViewPinky"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textViewRing"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"
        android:layout_toEndOf="@+id/barPinky" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/RelativeLayout03"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:id="@+id/buttonTrim"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewTxHz"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/spinner"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTxHz"
        android:layout_above="@+id/buttonTrim"
        android:layout_alignParentStart="true" />

</RelativeLayout>
